{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "height": 500,
  "width": 500,
  "title": "World Happiness",
  "data": {
    "url": "https://raw.githubusercontent.com/Honeyjar1000/FIT3179_week10/main/data/2019.csv"
  },
  "mark": "point",
  "encoding": {
    "x": {
      "field": "Social_support",
      "type": "quantitative",
      "title":"Social Support Ranking",
      "axis": {"tickCount": 0.001},
      "scale": {"type": "linear",  "domain":[0, 2]}
    },
    "y": {
      "field": "Score",
      "type": "quantitative",
      "title":"Happiness Score",
      "axis": { "tickCount": 0.1},
      "scale": {"type": "linear", "domain":[2, 8]}
    },
    "size": {"field": "GDP_per_capita", "type": "quantitative",  "scale": {"range": [0, 2]}
},
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Social_support", "type": "quantitative", "format": ","},
      {"field": "Score", "type": "quantitative", "format": ","},
      {"field": "GDP_per_capita", "type": "quantitative", "format": ","},
      {"field": "Social_support", "type": "quantitative", "format": ","}
    ]

  }
}
