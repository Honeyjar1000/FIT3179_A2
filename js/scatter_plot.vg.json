{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "height": 500,
  "width": 500,
  "title": "World Happiness",
  "data": {
    "url": "https://raw.githubusercontent.com/Honeyjar1000/FIT3179_week10/main/data/2019.csv"
  },
  "params": [
    { 
    "name": "Continent_selection", 
    "bind": { 
      "input": "select", 
      "options": [ null, "NA", "SA", "EUR", "AFR", "ASIA", "OCE" ], 
      "labels":[ "Show All", "North America", "South America", "Europe", "Africa", "Asia", "Oceania" ], 
      "name": "Continent Selection: " 
      } 
    } 
  ],  
  "transform": [ 
    {"filter": "Continent_selection == null || datum.continent == Continent_selection"}
  ],
  "selection": { 
    "continent_highlight": { 
      "type": "multi", 
      "fields": ["continent"], 
      "bind": "legend" 
    } 
  },
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "Social_support",
      "type": "quantitative",
      "title":"Social Support Ranking",
      "axis": {"tickCount": 0.001},
      "scale": {"type": "linear",  "domain":[0, 2]}
    },
    "y": {
      "field": "Score",
      "type": "quantitative",
      "title":"Happiness Score",
      "axis": { "tickCount": 0.1},
      "scale": {"type": "linear", "domain":[2, 8]}
    },
    "color": { 
      "field": "continent", 
      "type": "nominal", 
      "scale": {
        "domain": [ 
          "NA", 
          "SA", 
          "EUR", 
          "AFR", 
          "ASIA", 
          "OCE" 
        ], 
        "range": [ 
          "#e41a1c", 
          "#984ea3", 
          "#ff7f00", 
          "#a6cee3", 
          "#377eb8", 
          "#a65628" 
        ] 
      } 
    },
    "opacity": { 
      "value": 0.6 
    },    
    "size": {
      "field": "GDP_per_capita",
      "type": "quantitative",
      "title": "GPD Per Capita",
      "scale": {
          "type": "linear",
          "domain": [0,2]
      },
      "legend": {"format": ".1s"}
    },
    "tooltip": [
      {"field": "Country_Or_Region", "type": "nominal"},
      {"field": "Social_support", "type": "quantitative", "format": ","},
      {"field": "Score", "type": "quantitative", "format": ","},
      {"field": "GDP_per_capita", "type": "quantitative", "format": ","},
      {"field": "Social_support", "type": "quantitative", "format": ","}
    ]
  }
}
