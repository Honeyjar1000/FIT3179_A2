{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/Honeyjar1000/FIT3179_week10/main/data/2019.csv"
  },
  "params": [ { 
    "name": "Continent_selection", 
    "bind": { 
      "input": "select", 
      "options": ["NA", "SA", "EUR", "AFR", "ASIA", "OCE" ], 
      "labels":["North America", "South America", "Europe", "Africa", "Asia", "Oceania" ], 
      "name": "Continent Selection: " 
      } 
    } ], 
  "transform": [ {"filter": "Continent_selection == null || datum.continent == Continent_selection"} ], 
  "selection": { "continent_highlight": { "type": "multi", "fields": ["continent"], "bind": "legend" } },
  "mark": "bar",
  "encoding": {
    "x": {"field": "Country_Or_Region", "type": "nominal", "title": "Country"},
    "y": {"field": "Perceptions_of_corruption", "type": "quantitative", "title": "Perception Of Corruption"},
    "color": {
      "field": "continent", 
      "type": "nominal", 
      "scale": { 
        "domain": [ "NA", "SA", "EUR", "AFR", "ASIA", "OCE" ], 
        "range": [ "#e41a1c", "#984ea3", "#ff7f00", "#a6cee3", "#377eb8", "#a65628" ] 
      }
    }
  }
}
