{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Average Happiness Score By Country",
  "width": 600,
  "height": 400,
  "autosize": "none",

  "data": {
    "url": "https://raw.githubusercontent.com/Honeyjar1000/FIT3179_week10/main/js/worldmap.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Honeyjar1000/FIT3179_week10/main/data/2019.csv"
        },
        "key": "Country_Or_Region",
        "fields": ["Score"]
      }
    },
    {"calculate": "datum.Score", "as": "Happiness Score"}
  ],

  "selection": {
    "hover": {
      "type": "multi",
      "on": "mouseover",
      "empty": "none"
    }
  },

  "projection": {"type": "equirectangular"},
  "mark": {
    "type": "geoshape"
  },
  "encoding": {
    "color": {
      "field": "Score",
      "type": "quantitative",
      "title": "Happiness Score",
      "scale": {
          "type": "linear",
          "scheme": "reds"
      },
      "condition": {"selection": "hover", "value": "gray"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Score", "type": "quantitative", "title": "Happiness Score"}
    ]
  },
  "background": "black"

}
