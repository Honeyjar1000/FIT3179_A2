{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple pie chart with embedded data.",
  "width": 500,
  "height": 400,
  "autosize": "none",
  "data": {
    "url": "https://raw.githubusercontent.com/Honeyjar1000/FIT3179_week10/main/data/2019.csv"
  },
  "selection": {
    "hover": {"type": "multi", "on": "mouseover", "empty": "none"}
  },
  "params": [
    {
      "name": "Continent_selection",
      "value": "NA",
      "bind": {
        "input": "select",
        "options": ["NA", "SA", "EUR", "AFR", "ASIA", "OCE"],
        "labels": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.continent == Continent_selection"
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {"field": "Healthy_life_expectancy", "type": "quantitative"},
    "color": {
      "field": "Country_Or_Region",
      "type": "nominal",
      "legend": null,
      "scale": {"scheme": "set2"},
      "condition": {"selection": "hover", "value": "gray"}
    },
    "tooltip": [
      {"field": "Country_Or_Region", "type": "nominal", "title": "Country"},
      {
        "field": "Healthy_life_expectancy",
        "type": "quantitative",
        "title": "Life Expectancy"
      }
    ]
  },
  "background": "black"
}
